{% extends "../components/layout.njk" %}

{% block content %}
    <div class="w-full p-3">
        <div class="bg-gray-900 border border-gray-800 rounded shadow">
            <div class="border-b border-gray-800 p-3 flex items-center justify-between">
                <h2 class="font-bold text-2xl uppercase text-white">{{query.first_name}}
                    {{query.street}}</h2>
                <a href="/location/delete/{{query.id}}" class="inline-block border border-red-500 bg-red-500 text-white rounded-md px-4 py-2 m-2 transition duration-250 ease select-none hover:bg-red-800 focus:outline-none focus:shadow-outline">Delete</a>
            </div>
            <div class="p-5 text-gray-500 flex content-center justify-center ">
                <img src="{{image}}" alt="" class="object-cover  rounded-full m-8 w-44 h-44">
                <div class="flex flex-col justify-center">

                    <p>
                        <span class="text-gray-300">Street name and number:</span>
                        {{query.street}}</p>
                    <p>
                        <span class="text-gray-300">Zip and City:</span>
                        {{query.city}}
                    </p>
                    <p>
                        <span class="text-gray-300">Country:</span>
                        {{query.country}}
                    </p>
                    <p>
                        <span class="text-gray-300">Latitude:</span>
                        {{query.latitude}}
                        <span class="text-gray-300"> | Longitude:</span>
                        {{query.longitude}}
                    </p>
                    <p>
                        <span class="text-gray-300">Codename:</span>
                        {{query.name}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

{% endblock %}