{% extends "../components/layout.njk" %}

{% block content %}
    <div class="w-full p-3">
        <div class="bg-gray-900 border border-gray-800 rounded shadow">
            <div class="border-b border-gray-800 p-3">
                <h2 class="font-bold text-2xl uppercase text-white">Add location</h2>
            </div>
            <form action="/location/add" method="post" class="p-8">
                <div class="text-gray-500 flex content-center justify-center ">
                    <div class="text-base leading-6 space-y-4 text-gray-200 sm:text-lg sm:leading-7">
                        <div class="flex flex-col">
                            <label class="leading-loose">City</label>
                            <input required type="text" name="city" value="{% if location %}{{location.city}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Prague">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Street name</label>
                            <input required type="text" name="street_name" value="{% if location %}{{location.street_name}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Palachova">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Street number</label>
                            <input required type="text" name="street_number" value="{% if location %}{{location.street_number}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="42">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Codename</label>
                            <input required type="text" name="codename" value="{% if location %}{{location.codename}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="pink fluffy unicorn">
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="flex flex-col">
                                <label class="leading-loose">Zip code</label>
                                <input required type="text" name="zip" value="{% if location %}{{location.zip}}{%else%}{% endif %}" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="584 01">
                            </div>
                            <div class="flex flex-col flex-grow">
                                <label class="leading-loose">Country</label>
                                <input required type="text" name="country" value="{% if location %}{{location.country}}{%else%}{% endif %}" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Russia">
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="flex flex-col">
                                <label class="leading-loose">Latitude</label>
                                <input required type="text" name="latitude" value="{% if location %}{{location.latitude}}{%else%}{% endif %}" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="57.7193237">
                            </div>
                            <div class="flex flex-col flex-grow">
                                <label class="leading-loose">Longitude</label>
                                <input required type="text" name="longitude" value="{% if location %}{{location.longitude}}{%else%}{% endif %}" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="11.9120278">
                            </div>
                        </div>
                        <input type="submit" value="Add" class="block bg-{{color}}-800 hover:bg-{{color}}-900 text-white px-4 py-3 rounded-md w-full cursor-pointer ">

                    </div>
                </div>
            </form>
            {% if errors %}
                <ul class="p-8">
                    {% for error in errors %}
                        <li>
                            <div class="flex justify-center items-center m-1 font-medium py-1 px-2 bg-white rounded-md text-red-100 bg-red-700 border border-red-700 ">
                                <div slot="avatar">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-octagon w-5 h-5 mx-2">
                                        <polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon>
                                        <line x1="12" y1="8" x2="12" y2="12"></line>
                                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                                    </svg>
                                </div>
                                <div class="text-xl font-normal  max-w-full flex-initial">
                                    {{error.msg}}</div>

                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

    {% endblock %}