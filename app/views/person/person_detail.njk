{% extends "../components/layout.njk" %}

{% block content %}
    <div class="w-full p-3">
        <div class="bg-gray-900 border border-gray-800 rounded shadow">
            <div class="border-b border-gray-800 p-3">
                <h2 class="font-bold text-2xl uppercase text-white">{{query.first_name}}
                    {{query.last_name}}</h2>
            </div>
            <div class="p-5 text-gray-500 flex content-center justify-center ">
                <img src="{{image}}" alt="" class="rounded-full m-8 w-44 h-44">
                <div class="flex flex-col justify-center">
                
                    <p><span class="text-gray-300">Nickname:</span> {{query.nickname}}</p>
                    <p><span class="text-gray-300">Fullname:</span> {{query.first_name}}
                        {{query.last_name}}</p>
                    <p><span class="text-gray-300">Genre:</span> {% if query.gender == "M"%} Male {% else %} Female {% endif %} | Height: {{query.height}} cm</p>
                    <p><span class="text-gray-300">Address:</span> <div class="ml-4">
                            <p>{{query.street}}</p>
                            <p>{{query.city}}</p>
                            <p>{{query.country}}</p>
                        </div>
                    </p>
                </div>

            </div>
        </div>
    </div>

{% endblock %}