{% extends "../components/layout.njk" %}

{% block content %}
    <div class="w-full p-3">
        <div class="bg-gray-900 border border-gray-800 rounded shadow">
            <div class="border-b border-gray-800 p-3">
                <h2 class="font-bold text-2xl uppercase text-white">Add person</h2>
            </div>
            <form action="/person/add" method="post" class="p-8">
                <div class="text-gray-500 flex content-center justify-center ">
                    <div class="text-base leading-6 space-y-4 text-gray-200 sm:text-lg sm:leading-7">
                        <div class="flex flex-col">
                            <label class="leading-loose">First name</label>
                            <input required type="text" name="first_name" value="{% if person %}{{person.first_name}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="John">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Last name</label>
                            <input required type="text" name="last_name" value="{% if person %}{{person.last_name}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Doe">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Nickname</label>
                            <input type="text" name="nickname" value="{% if person %}{{person.nickname}}{%else%}{% endif %}" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="FluffyUnicorn42">
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Birthday</label>
                            <div class="relative focus-within:text-gray-600 text-gray-400">
                                <input required type="date" name="birthday" value="{% if person %}{{person.birthday}}{%else%}{% endif %}" class="pr-4 pl-10 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="25/02/2020">
                                <div class="absolute left-3 top-2">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <div class="flex flex-col">
                                <label class="leading-loose">Height (cm)</label>
                                <input type="text" name="height" value="{% if person %}{{person.height}}{%else%}{% endif %}" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="183">
                            </div>
                            <div class="flex flex-col flex-grow">
                                <label class="leading-loose">Gender</label>
                                <select name="gender" id="" class="pr-4 px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600">
                                    <option value="">–</option>
                                    <option value="M">Male</option>
                                    <option value="F">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="flex flex-col">
                            <label class="leading-loose">Location</label>
                            <select name="" id="" name="location" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600">
                                <option value="">–</option>
                                {% for location in locations %}
                                    <option value="{{location.id}}">{{location.name}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <input type="submit" value="Add" class="block bg-{{color}}-800 hover:bg-{{color}}-900 text-white px-4 py-3 rounded-md w-full cursor-pointer ">

                    </div>
                </div>
            </form>
            {% if errors %}
                <ul class="p-8">
                    {% for error in errors %}
                        <li>
                            <div class="flex justify-center items-center m-1 font-medium py-1 px-2 bg-white rounded-md text-red-100 bg-red-700 border border-red-700 ">
                                <div slot="avatar">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-octagon w-5 h-5 mx-2">
                                        <polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon>
                                        <line x1="12" y1="8" x2="12" y2="12"></line>
                                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                                    </svg>
                                </div>
                                <div class="text-xl font-normal  max-w-full flex-initial">
                                    {{error.msg}}</div>

                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

    {% endblock %}